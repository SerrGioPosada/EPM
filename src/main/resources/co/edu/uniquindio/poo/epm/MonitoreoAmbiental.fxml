<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.String?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.epm.HelloController"
            stylesheets="@Style.css" fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
    <VBox spacing="20.0" styleClass="content-area">
    <padding><Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/></padding>

    <VBox spacing="5.0">
        <Label text="Módulo de Gestión Ambiental y Sostenibilidad" style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-weight: 600;"/>
        <Label text="Monitoreo Ambiental y Consumo Energético" styleClass="page-title" style="-fx-font-size: 28px;"/>
    </VBox>

    <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="filter-section">
        <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
        <VBox spacing="5.0">
            <Label text="Sede" styleClass="detail-label"/>
            <ComboBox fx:id="cmbSede" promptText="Seleccione sede" styleClass="form-combo" prefWidth="200">
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Sede Principal Medellín"/>
                        <String fx:value="Subestación Norte"/>
                        <String fx:value="Planta de Tratamiento"/>
                        <String fx:value="Todas"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>
        </VBox>
        <VBox spacing="5.0">
            <Label text="Período" styleClass="detail-label"/>
            <ComboBox fx:id="cmbPeriod" promptText="Seleccione período" styleClass="form-combo" prefWidth="180">
                <items>
                    <javafx.collections.FXCollections fx:factory="observableArrayList">
                        <String fx:value="Noviembre 2025"/>
                        <String fx:value="Octubre 2025"/>
                        <String fx:value="Q4 2025"/>
                        <String fx:value="Año 2025"/>
                    </javafx.collections.FXCollections>
                </items>
            </ComboBox>
        </VBox>
        <Button text="Consultar" styleClass="btn-primary" prefHeight="40">
            <padding><Insets top="10.0" right="30.0" bottom="10.0" left="30.0"/></padding>
        </Button>
    </HBox>

    <VBox spacing="15.0" styleClass="card-base">
        <padding><Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/></padding>
        <Label text="Indicadores Ambientales - Tendencias" styleClass="section-title"/>
        <Separator/>
        <LineChart fx:id="chartEnvironmental" prefHeight="350" legendVisible="true"
                   style="-fx-background-color: white; -fx-background-radius: 8;">
            <xAxis>
                <CategoryAxis label="Mes" side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Valores Relativos" side="LEFT"/>
            </yAxis>
        </LineChart>
        <HBox spacing="30.0" alignment="CENTER" style="-fx-padding: 10;">
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Emisiones CO₂" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #1B5E20;"/>
                <Label text="Ton/mes" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Consumo de Agua" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #0277BD;"/>
                <Label text="m³/mes" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Consumo Energético" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #F57C00;"/>
                <Label text="kWh/mes" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
            </VBox>
        </HBox>
    </VBox>

    <VBox spacing="15.0" styleClass="card-base">
        <padding><Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/></padding>
        <Label text="Registro de Mediciones Mensuales" styleClass="section-title"/>
        <Separator/>
        <GridPane hgap="20.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>
            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Emisiones CO₂ (Ton) *" styleClass="detail-label"/>
                <TextField fx:id="txtCO2" promptText="0.00" styleClass="form-field"/>
            </VBox>
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Consumo Agua (m³) *" styleClass="detail-label"/>
                <TextField fx:id="txtWater" promptText="0.00" styleClass="form-field"/>
            </VBox>
            <VBox spacing="8.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label text="Consumo Energía (kWh) *" styleClass="detail-label"/>
                <TextField fx:id="txtEnergy" promptText="0.00" styleClass="form-field"/>
            </VBox>
        </GridPane>
        <HBox spacing="15.0" alignment="CENTER">
            <Button text="Registrar Mediciones" styleClass="btn-primary">
                <padding><Insets top="12.0" right="35.0" bottom="12.0" left="35.0"/></padding>
            </Button>
            <Button text="Generar Informe Ambiental" styleClass="btn-success">
                <padding><Insets top="12.0" right="35.0" bottom="12.0" left="35.0"/></padding>
            </Button>
        </HBox>
    </VBox>

    </VBox>
</ScrollPane>

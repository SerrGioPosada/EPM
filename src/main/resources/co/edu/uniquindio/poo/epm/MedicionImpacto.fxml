<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import java.lang.String?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.epm.HelloController"
            stylesheets="@Style.css" fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
    <VBox spacing="20.0" styleClass="content-area">
    <padding><Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/></padding>

    <VBox spacing="5.0">
        <Label text="Módulo de Investigación, Desarrollo e Innovación (I+D+i)" style="-fx-text-fill: #6c757d; -fx-font-size: 12px; -fx-font-weight: 600;"/>
        <Label text="Gestión y Medición de Impacto" styleClass="page-title" style="-fx-font-size: 28px;"/>
    </VBox>

    <VBox spacing="15.0" styleClass="card-base">
        <padding><Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/></padding>
        <Label text="Proyectos I+D+i Activos" styleClass="section-title"/>
        <TableView fx:id="tblProjects" prefHeight="450" minHeight="450" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 14px;">
            <columns>
                <TableColumn text="Título Proyecto" prefWidth="250" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn text="Estado" prefWidth="120" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn text="Presupuesto Asignado" prefWidth="150" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn text="Fecha Aprobación" prefWidth="140" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn text="Responsable" prefWidth="180" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn text="Progreso %" prefWidth="100" style="-fx-alignment: CENTER-LEFT;"/>
            </columns>
            <placeholder><Label text="No hay proyectos I+D+i registrados" styleClass="text-muted"/></placeholder>
        </TableView>
    </VBox>

    <VBox spacing="15.0" styleClass="card-base">
        <padding><Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/></padding>
        <Label text="Medición de Impacto - Resultado vs Meta" styleClass="section-title"/>
        <Separator/>
        <javafx.scene.chart.BarChart fx:id="chartImpacto" prefHeight="350" legendVisible="true"
                                      style="-fx-background-color: white; -fx-background-radius: 8;">
            <xAxis>
                <javafx.scene.chart.CategoryAxis label="Proyecto I+D+i" side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <javafx.scene.chart.NumberAxis label="Porcentaje de Cumplimiento %" side="LEFT"/>
            </yAxis>
        </javafx.scene.chart.BarChart>
        <HBox spacing="30.0" alignment="CENTER" style="-fx-padding: 10;">
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Meta Inicial" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #1B5E20;"/>
                <Label text="Objetivo planificado" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5.0">
                <Label text="Resultado Obtenido" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #0277BD;"/>
                <Label text="Logro alcanzado" style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
            </VBox>
        </HBox>
    </VBox>

    <VBox spacing="15.0" styleClass="card-base">
        <padding><Insets top="25.0" right="25.0" bottom="25.0" left="25.0"/></padding>
        <Label text="Formulario de Cierre de Proyecto" styleClass="section-title"/>
        <Separator/>
        <GridPane hgap="20.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="50.0"/>
                <ColumnConstraints percentWidth="50.0"/>
            </columnConstraints>
            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="Proyecto *" styleClass="detail-label"/>
                <ComboBox fx:id="cmbProject" promptText="Seleccione proyecto" styleClass="form-combo" prefWidth="350">
                    <items>
                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                            <String fx:value="Sistema Predictivo Mantenimiento"/>
                            <String fx:value="Optimización Redes Eléctricas"/>
                            <String fx:value="App Móvil Clientes"/>
                        </javafx.collections.FXCollections>
                    </items>
                </ComboBox>
            </VBox>
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Resultado Final *" styleClass="detail-label"/>
                <TextField fx:id="txtResult" promptText="Ej: Ahorro 120M/año" styleClass="form-field"/>
            </VBox>
            <VBox spacing="8.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                <Label text="Impacto Final y Conclusiones *" styleClass="detail-label"/>
                <TextArea fx:id="txtImpact" promptText="Describa el impacto obtenido, lecciones aprendidas y recomendaciones..."
                          prefRowCount="5" wrapText="true" styleClass="form-field"/>
            </VBox>
        </GridPane>
        <HBox spacing="15.0" alignment="CENTER">
            <Button text="Cerrar Proyecto" styleClass="btn-primary">
                <padding><Insets top="12.0" right="35.0" bottom="12.0" left="35.0"/></padding>
            </Button>
            <Button text="Generar Informe de Impacto" styleClass="btn-success">
                <padding><Insets top="12.0" right="35.0" bottom="12.0" left="35.0"/></padding>
            </Button>
        </HBox>
    </VBox>

    </VBox>
</ScrollPane>
